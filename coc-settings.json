{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
				"cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                "*/.ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
				"highlight": {
					"lsRanges" : true
				},
				"clang": { 
          			"extraArgs": [ "-std=c++98", "-I", "/Library/Developer/CommandLineTools/usr/bin/../include/c++/v1"]	
				}
        	}
    	}
	}
}
